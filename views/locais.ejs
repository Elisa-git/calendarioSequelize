<!DOCTYPE html>
<html lang="pt-br">

  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Locais</title>

    <link href="/style/header.css" rel="stylesheet">
    <link href="/style/paginas.css" rel="stylesheet">
    <link href="/style/footer.css" rel="stylesheet">
    <link rel="stylesheet" href="style/modal.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="icon" href="img/logocec.png">

  </head>

  <body>

    <%- include ('partials/header') %>

    <main>

      <section>
          <div id="segundaHeader">
            <div id="Titulo">
              <h1>Locais</h1>
            </div>
            <div id="botoes">
              <input class="botoes" id="botaoPesquisar" type="text" placeholder="Pesquisar" value="">
              <button class="botoes" id="botaoAdicionar" onclick="OpenModalSala()"><img id="add-icon" src="img/add.png"
                  width="11px">Adicionar</button>
              <button class="botoes" id="botaoExportar" onclick="ExportToExcel()"> <img id="excelPicture"
                  src="img/excel-i.png"> Exportar</button>
            </div>
          </div>
          <br>
          <hr class="style-one">
          <div id="FiltrosSection">
            <h3>Filtros:</h3>
            <select class="selectBox" name="sistemasBox" id="sistemasBox">
              <option disabled selected>Possui Sistemas ?</option>
              <option value="Possui">Possui</option>
              <option value="naoPossui">Não Possui</option>
            </select>
            <select class="selectBox" name="maximoItensPagina" id="maximoItensPagina">
              <option value="10">10 por página</option>
              <option value="30">30 por página</option>
            </select>
          </div>
      </section>

      <!-- MODAL ADICIONAR -->
  
      <section>
        <div id="myModal" class="modal">
          <div class="modal-content">

            <div class="modal-header">
              <h1 id="titulo-modal">Cadastrar Local</h1>
              <span class="close">&times;</span>
            </div>

            <form id="form">
              <div class="form">
                <label for="nomeLocal" class="Titulo-Campo">Local:</label>
                <input type="text" name="nomeLocal" id="nomeLocal" class="Campo-Modal-Grande" placeholder="Ex: Sala 1" required />
              </div>
        
              <div class="form">
                <label for="capacidade" class="Titulo-Campo">Capacidade:</label>
                <input type="number" name="capacidade" id="capacidade" class="Campo-Modal-Grande" placeholder="Ex: 20" required />
              </div>
        
              <div class="form">
                <label for="sistemas" class="Titulo-Campo">Possui Sistemas ?</label>
                <div class="Campo-seletor-Modal-Pequeno" required>
                  <select name="select" name="sistemas" id="sistemas" required>
                    <option value="0">Possui</option>
                    <option value="1">Não Possui</option>
                  </select>
                </div>
              </div>
        
              <div class="modal-footer">
                <div>
                  <button id="botaoCancelar">Cancelar</button>
                </div>

                <div>
                  <button id="botaoConfirmar" type="submit">Confirmar</button>
                </div>
              </div>
            
            </form>
          </div>
        </div>
      </section>

      <!-- MODAL EDITAR -->

      <section>
        <div id="modalEditar" class="modal">
          <div class="modal-content">
  
            <div class="modal-header">
              <h1 id="titulo-modal">Editar Local</h1>
            </div>

            <form id="formEditar">

              <div class="form">
                <label for="nomeLocalEdit" class="Titulo-Campo">Local:</label>
                <input type="text" name="nomeLocalEdit" id="nomeLocalEdit" class="Campo-Modal-Grande" placeholder="Sala 1" required />
              </div>
  
              <div class="form">
                <label for="capacidadeEdit" class="Titulo-Campo">Capacidade:</label>
                <input type="number" name="capacidadeEdit" id="capacidadeEdit" class="Campo-Modal-Grande" placeholder="20" required />
              </div>
    
              <div class="form">
                <label for="sistemasEdit" class="Titulo-Campo">Possui Sistemas ?</label>
                <div class="Campo-seletor-Modal-Pequeno" required> 
                  <select name="select" name="sistemasEdit" id="sistemasEdit" required>
                    <option value="0">Possui</option>
                    <option value="1">Não Possui</option>
                  </select>
                </div>
              </div>
    
              <div class="modal-footer">
                <div>
                  <button id="botaoCancelarEditar">Cancelar</button>
                </div>
              
                <div>
                  <button id="botaoConfirmarEditar" formmethod="put" type="submit">Confirmar</button>
                </div>
              </div>

            </form>
  
          </div>
        </div>
      </section>

      <!-- MODAL APAGAR -->

      <section>
        <div id="modalApagar" class="modal">
          <div id="modal-content-apagar" class="modal-content">

            <div class="modal-header">
              <h1 id="titulo-modal">Apagar Local</h1>
            </div>

            <div id="warning">
              <img src="/img/warning.png">
            </div>

            <div>
              <p id="textoApagar">Tem certeza que deseja apagar esse local?</p>
            </div>

            <div class="modal-footer">
              <div>
                <button id="botaoCancelarApagar">Cancelar</button>
              </div>
              <div>
                <button id="botaoConfirmarApagar">Confirmar</button>
              </div>
            </div>

          </div>
        </div>
      </section>

      <section>
          <table id="tbl">
            <tr id="atributos">
              <th>Sala</th>
              <th>Capacidade</th>
              <th>Possui Sistemas ?</th>
              <th id="colunaCrud"></th>
            </tr>
            <% locais.forEach(locais=> { %>
              <tr class="tableRow">
                <td hidden id="id"> <%= locais.id %> </td>
                <td> <%= locais.nomeLocal %> </td>
                <td> <%= locais.capacidade %> </td>
                <td> <% if (locais.sistemas==0) { %>
                        <p> Sim</p>
                      <%} else { %>
                        <p> Não </p>
                      <% } %> 
                </td> 
                <td>
                  <button id="botaoEditar" class="crud"><img src="img/edit.png" width="16px" height="16px"></button>
                  <button id="botaoApagar" class="crud"> <img src="img/delete.png" width="17px" height="17px"> </button>
                </td>
              </tr>
            <% }) %>
          </table>
      </section>

    </main>

    <%- include ('partials/footer') %>
    <script src="/js/methods/locais.js"></script>

  </body>

</html>