<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Turmas</title>

    <link href="/style/header.css" rel="stylesheet">
    <link href="/style/paginas.css" rel="stylesheet">
    <link href="/style/footer.css" rel="stylesheet">
    <link rel="stylesheet" href="style/modal.css">

    <link rel="icon" href="img/logocec.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    
    <%- include ('partials/header') %>

    <main>

        <section>
            <div id="segundaHeader">
              <div id="Titulo">
                <h1>Turmas</h1>
              </div>
              <div id="botoes">
                <input class="botoes" id="botaoPesquisar" type="text" placeholder="Pesquisar" value="">
                <button class="botoes" id="botaoAdicionar" onclick="OpenModalSala()"><img id="add-icon"  src="img/add.png" width="11px">Adicionar</button>
                <button class="botoes" id="botaoExportar" onclick="ExportToExcel()"> <img id="excelPicture" src="img/excel-i.png"> Exportar</button>
              </div>
            </div> 
            <br>
            <hr class="style-one">
            <div id="FiltrosSection">
                <h3>Filtros:</h3>
                <select class="selectBox" name="nomeEspecializacoes" id="FiltroPilar">
                    <option hidden selected>Capacitação</option>
                    <% especializacoes.forEach(especializacoes => { %>
                        <option value="<%= especializacoes.nomeEspecializacoes %>"> <%= especializacoes.nomeEspecializacoes %> </option>
                    <% }) %>
                </select>
                <select class="selectBox" name="dataInicio" id="dataInicio">
                    <option value="">Data Inicio</option>
                </select>
                <select class="selectBox" name="dataFim" id="dataFim">
                    <option value="">Data Fim</option>
                </select>
                <select class="selectBox" name="maximoItensPagina" id="maximoItensPagina">
                    <option value="10">10 por página</option>
                    <option value="30">30 por página</option>
                </select>
            </div>
        </section>

        <section>
            <div id="myModal" class="modal">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 id="titulo-modal">Cadastrar Turma</h1>
                    </div>

                    <form>
                        <div class="form" required>
                            <label for="setor">Capacitação</label>
                            <div class="Campo-seletor-Modal-Pequeno" required>
                                <select name="especializacoes_id" id="especializacoes_id" required>
                                    <% turmas.forEach(turmas => { %>
                                        <option value="<%= turmas.especializacoes_id %>"> <%= turmas.especializacoes_id %> </option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>

                        <div class="form">
                            <label for="codTurma" class="Titulo-Campo">Código Turma:</label>
                            <input type="text" name="codTurma" id="codTurma" class="Campo-Modal-Grande" placeholder="Autoplay" required />
                        </div>
                        
                        <div class="form">
                            <label for="abreviacao" class="Titulo-Campo">Data Inicio:</label>
                            <input type="date" id="dataInicio" name="dataInicio">
                        </div>
                        
                        <div class="form">
                            <label for="abreviacao" class="Titulo-Campo">Data Fim:</label>
                            <input type="date" id="dataFim" name="dataFim">
                        </div>
                        
                        <div class="form">
                            <label for="alunos" class="Titulo-Campo">Número de alunos:</label>
                            <input type="number" id="alunos" class="Campo-Modal-Grande" placeholder="15" required />
                        </div>
                    </form>

                    <div class="modal-footer">
                        <div>
                            <button id="botaoCancelar">Cancelar</button>
                        </div>

                        <div>
                            <button id="botaoConfirmar" onclick="">Confirmar</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- MODAL EDITAR -->

        <section>
            <div id="modalEditar" class="modal">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 id="titulo-modal">Editar Turma</h1>
                    </div>

                    <form>
                        <div class="form" required>
                            <label for="setor">Capacitação</label>
                            <div class="Campo-seletor-Modal-Pequeno" required>
                                <select name="especializacoes_id" id="especializacoes_id" required>
                                    <% turmas.forEach(turmas => { %>
                                        <option value="<%= turmas.especializacoes_id %>"> <%= turmas.especializacoes_id %> </option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>

                        <div class="form">
                            <label for="codTurma" class="Titulo-Campo">Código Turma:</label>
                            <input type="text" name="codTurma" id="codTurma" class="Campo-Modal-Grande" placeholder="Autoplay" required />
                        </div>
                        
                        <div class="form">
                            <label for="abreviacao" class="Titulo-Campo">Data Inicio:</label>
                            <input type="date" id="dataInicio" name="dataInicio">
                        </div>
                        
                        <div class="form">
                            <label for="abreviacao" class="Titulo-Campo">Data Fim:</label>
                            <input type="date" id="dataFim" name="dataFim">
                        </div>
                        
                        <div class="form">
                            <label for="alunos" class="Titulo-Campo">Número de alunos:</label>
                            <input type="number" id="alunos" class="Campo-Modal-Grande" placeholder="15" required />
                        </div>
                    </form>

                    <div class="modal-footer">
                        <div>
                            <button id="botaoCancelarEditar">Cancelar</button>
                        </div>

                        <div>
                            <button id="botaoConfirmar" onclick="">Confirmar</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section>
            <table id="tbl">
                <tr id="atributos">
                    <th>Turma</th>
                </tr>
                <tr class="tableRow">
                    <td class="categoria">Autoplay</td>
                    <td>
                    <button class="crud" id="botaoEditar"><img src="img/edit.png"  width="16px" height="16px"></button >
                    <button class="crud" id="botaoApagar" onclick='removeLinha(this)'><img src="img/delete.png" width="17px" height="17px"></button>
                    </td>
                </tr>
            </table>
        </section>

    </main>

    <%- include ('partials/footer') %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

</body>
</html>