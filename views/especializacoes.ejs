<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Capacitações</title>

    <link rel="stylesheet" href="style/paginas.css">
    <link rel="stylesheet" href="style/header.css" />
    <link rel="stylesheet" href="style/footer.css">
    <link rel="stylesheet" href="style/modal.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
    <link rel="icon" href="img/logocec.png">
</head>
<body>
    <%- include ('partials/header') %>

    <main>

        <section>
            <div id="segundaHeader">
              <div id="Titulo">
                <h1>Capacitações</h1>
              </div>
              <div id="botoes">
                <input class="botoes" id="botaoPesquisar" type="text" placeholder="Pesquisar" value="">
                <button class="botoes" id="botaoAdicionar" onclick="OpenModalSala()"><img id="add-icon"  src="img/add.png" width="11px">Adicionar</button>
                <button class="botoes" id="botaoExportar" onclick="ExportToExcel()"> <img id="excelPicture" src="img/excel-i.png"> Exportar</button>
              </div>
            </div> 
            <br>
            <hr class="style-one">
            <div id="FiltrosSection">
                <h3>Filtros:</h3>
                <select class="selectBox" name="nomePilar" id="FiltroPilar">
                    <option hidden selected>Pilar</option>
                    <% pilares.forEach(pilares => { %>
                        <option value="<%= pilares.nomePilar %>"> <%= pilares.nomePilar %> </option>
                    <% }) %>
                </select>
                <select class="selectBox" name="maximoItensPagina" id="maximoItensPagina">
                  <option value="10">10 por página</option>
                  <option value="30">30 por página</option>
                </select>
            </div>
        </section>

        <!-- MODAL ADICIONAR -->
        
        <section>
            <div id="myModal" class="modal">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 id="titulo-modal">Cadastrar Capacitação</h1>
                        <span class="close">&times;</span>
                    </div>
                    <form id="form">

                        <div class="form">
                            <label for="nomeEspecializacoes" class="Titulo-Campo">Nome Capacitação:</label>
                            <input type="text" name="nomeEspecializacoes" id="nomeEspecializacoes" class="Campo-Modal-Grande" placeholder="AutoPlay" required />
                        </div>
                        <div class="form">
                            <label for="pilares_id" class="Titulo-Campo">Pilar:</label>
                            <div class="Campo-seletor-Modal-Pequeno">
                                <select name="pilares_id" id="pilares_id">
                                    <% pilares.forEach(pilares => { %>
                                        <option value="<%= pilares.id %>"> <%= pilares.nomePilar %> </option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>
                        <div calss="modal-footer">
                            <div>
                                <button id="botaoCancelar">Cancelar</button>
                            </div>

                            <div>
                                <button id="botaoConfirmar" type="submit">Confirmar</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </section>

        <!-- MODAL EDITAR -->

        <section>
            <div id="modalEditar" class="modal">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 id="titulo-modal">Editar Capacitação</h1>
                        <span class="close">&times;</span>
                    </div>
                    <form id="formEdit">
                        <div class="form">
                            <label for="nomeEspecializacoesEdit" class="Titulo-Campo">Nome Capacitação:</label>
                            <input type="text" name="nomeEspecializacoesEdit" id="nomeEspecializacoesEdit" class="Campo-Modal-Grande" placeholder="AutoPlay" required />
                        </div>
                        <div class="form">
                            <label for="pilares_id" class="Titulo-Campo">Pilar:</label>
                            <div class="Campo-seletor-Modal-Pequeno" required>
                                <select name="pilares_id" id="pilares_idEdit" required>
                                    <% pilares.forEach(pilares => { %>
                                        <option value="<%= pilares.nomePilar %>"> <%= pilares.nomePilar %> </option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>
                    </form>
                    <div class="modal-footer">
                        <div>
                            <button id="botaoCancelarEditar">Cancelar</button>
                        </div>

                        <div>
                            <button id="botaoConfirmar" type="submit" >Confirmar</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- MODAL APAGAR -->

        <section>
            <div id="modalApagar" class="modal">
                <div id="modal-content-apagar" class="modal-content">

                    <div class="modal-header">
                        <h1 id="titulo-modal">Apagar Local</h1>
                    </div>

                    <div id="warning">
                        <img src="/img/warning.png">
                    </div>

                    <div>
                        <p id="textoApagar">Tem certeza que deseja apagar essa capacitação?</p>
                    </div>

                    <div class="modal-footer">
                        <div>
                            <button id="botaoCancelarApagar">Cancelar</button>
                        </div>
                        <div>
                            <button id="botaoConfirmarApagar">Confirmar</button>
                        </div>
                    </div>

                </div>
            </div>
        </section>

        <section>
            <table id="tbl">
                <tr id="atributos">
                    <th>Capacitação</th>
                    <th>Pilar</th>
                    <th id="colunaCrud"></th>
                </tr>
                <% especializacoes.forEach(especializacoes => { %>
                    <tr class="tableRow">
                        <td hidden id="id"> <%= especializacoes.id %> </td>
                        <td> <%= especializacoes.nomeEspecializacoes %> </td>
                        <td> <%= especializacoes.Pilare.nomePilar %> </td>
                        <td>
                            <button id="botaoEditar" class="crud"><img src="img/edit.png"  width="16px" height="16px"></button >
                            <button id="botaoApagar" class="crud" type="submit"> <img src="img/delete.png" width="17px" height="17px"> </button>
                        </td>
                    </tr>
                <% }) %>
            </table>
        </section>

    </main>
    <%- include ('partials/footer') %>
    <script src="/js/methods/especializacoes.js"></script>
</html>